<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sau.rentalclothsapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_appicon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.Transparent"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>


        <activity
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.Transparent"
            android:windowSoftInputMode="adjustPan"
            android:name=".LoginActivity">

        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".RegisterActivity"
            android:theme="@style/AppTheme.Transparent"
            android:windowSoftInputMode="adjustPan" />


        <activity
            android:screenOrientation="portrait"
            android:name=".Owner.OwnerActivity"
            android:label="@string/title_activity_owner"
            android:windowSoftInputMode="adjustPan"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Renter.RenterActivity"
            android:windowSoftInputMode="adjustPan"
            android:label="@string/title_activity_renter"
            android:theme="@style/AppTheme">

        </activity>
        <activity
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:name=".ForgetPasswordActivity">

        </activity>
    </application>

</manifest>