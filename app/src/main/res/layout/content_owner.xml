<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Owner.OwnerActivity"
    tools:showIn="@layout/app_bar_owner">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
    <RelativeLayout
        android:gravity="center"
        android:id="@+id/txtUnameuser"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtUnameOwner"
            android:layout_margin="5dp"
            android:hint="Welcome User"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"/>
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/framlayoutOwner"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txtUnameuser"
        android:layout_above="@+id/ll_viewOwner"
        android:layout_gravity="top"
        android:layout_weight="8"
        android:orientation="vertical">

    </FrameLayout>
    <View
        android:id="@+id/ll_viewOwner"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_above="@+id/ll_botom_barOwner"
        android:background="@drawable/shadow">


    </View>

    <LinearLayout
        android:id="@+id/ll_botom_barOwner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/txt_img_homeOwner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/homelight"
            android:gravity="center"
            android:text="Home"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_img_inboxOwner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/inboxlight"
            android:gravity="center"
            android:text="InBox"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_img_proOwner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/profilelight"
            android:gravity="center"
            android:text="Profile "
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/txt_img_settingOwner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/settinglight"
            android:gravity="center"
            android:text="Setting"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>


</RelativeLayout>