    <LinearLayout
        android:id="@+id/lin4"
        android:layout_below="@+id/lin3"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Select Date"
            android:textSize="17sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/in_startdate"
            android:hint="DD/MM/YYYY"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="To"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/in_enddate"
            android:layout_marginLeft="7dp"
            android:hint="DD/MM/YYYY"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin5"
        android:layout_below="@+id/lin4"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Delivery Time"
            android:textSize="17sp"
            android:id="@+id/txt_deliverytime"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:id="@+id/in_starttime"
            android:hint="HH:MM"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="To"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:id="@+id/in_endtime"
            android:hint="HH:MM"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin6"
        android:layout_below="@+id/lin5"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Say Somthing To Owner"/>


    </LinearLayout>



    <LinearLayout
        android:layout_below="@+id/lin6"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btncancel"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            style="@style/DefaultButton"
            android:padding="10dp"
            android:text="Cancel"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnsubmit"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            style="@style/DefaultButton"
            android:padding="10dp"
            android:text="Submit"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>

</ScrollView>
