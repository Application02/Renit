        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin3"
            android:layout_marginTop="10dp">


            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Select Date"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/in_startdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="DD/MM/YYYY" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="To" />


            <TextView
                android:id="@+id/in_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:hint="DD/MM/YYYY" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin4"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_deliverytime"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Delivery Time"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/in_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:hint="HH:MM" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="To" />

            <TextView
                android:id="@+id/in_endtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:hint="HH:MM" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin5"
            android:layout_marginTop="10dp">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Say Somthing To Owner" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lin6"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/btncancel"
                style="@style/DefaultButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="Cancel"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnsubmit"
                style="@style/DefaultButton"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="10dp"
                android:text="Submit"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>
